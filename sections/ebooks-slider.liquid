<div style="background-color: #f8f8f8;" class="w-100 section-margin">
    <div class="w-100; ebook-title-padding">
        <h2 style="font-size: 36px; color:#361E45; text-align: center;">{{ section.settings.title }}</h2>
    </div>
    <p style="position: relative; z-index:999; top:150px">
        <span style="position: absolute; right:95%; font-size: 60px;" class="ebook-arrow">&#139;</span>
        <span style="position: absolute; left:95%; font-size: 60px;" class="ebook-arrow">&#155;</span>
    </p>
    <div class="w-100; flex-center">
        <section style="max-width: 1080px; margin: 0 100px;" class="ebook-section-height">
            {% for block in section.blocks %}
                <div style="min-width: 25%;" class="ebook">
                    <picture class="picture-padding">
                        <img src="{{ block.settings.ebook_image | img_url: 'master' }}" alt="ebook">
                    </picture>
                    <div class="detail">
                        <div style="margin-bottom: 1rem;" class="w-100 flex-center">
                            <img width="16px" height="16px" src="{{ section.settings.star | img_url: 'master' }}" alt="star">
                            <img width="16px" height="16px" src="{{ section.settings.star | img_url: 'master' }}" alt="star">
                            <img width="16px" height="16px" src="{{ section.settings.star | img_url: 'master' }}" alt="star">
                            <img width="16px" height="16px" src="{{ section.settings.star | img_url: 'master' }}" alt="star">
                            <img width="16px" height="16px" src="{{ section.settings.star | img_url: 'master' }}" alt="star">
                        </div>
                        <div style="gap: 0px;" class="programs-text-container">
                            <a style="font-weight: lighter; text-decoration: none;" class="source-sans-pro dieciseis" href="#">{{ block.settings.ebook_title }}</a>
                            <p class="source-sans-pro" style="color: #EDC0BD !important;"><strong>{{ block.settings.ebook_price }}</strong></p>
                        </div>
                    </div>
                </div>     
            {% endfor %}
        </section>
    </div> 
</div>
{% schema %}
    {
        "name": "Ebooks section",
        "class": "ebooks",
        "settings": [
            {
               "type": "text",
               "id":"title",
               "label":"title section"
            },
            {
                "type": "image_picker",
                "id": "star",
                "label": "star"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "ebook",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "ebook_image",
                        "label": "ebook image"
                    },
                    {
                        "type": "textarea",
                        "id": "ebook_title",
                        "label": "ebook title",
                        "default": "<p class='dieciseis source-sans-pro'>ebook title</p>"
                    },
                    {
                        "type": "textarea",
                        "id": "ebook_price",
                        "label": "ebook price",
                        "default": "<p class='source-sans-pro' style='color: #EDC0BD !important;'></p>"
                    }
                ]
            }
        ],
       "presets": [
            {
                "category": "ebooks",
                "name":"ebooks"
            }
       ]
    }
{% endschema %}
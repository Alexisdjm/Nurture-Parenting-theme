<div style="width:100%; height: 33vw; max-height: 700px;" class="center-vertically; center-vertically" style="background-color: #FBEFEE; height: 33vw;">
    <div style="position: relative; z-index: 1;" class="w-100">
        <p style="text-transform: uppercase;" class="pb-15 w-100 text-center">{{ section.settings.first_frase }}</p>
        <div style="padding-bottom: 40px;" class="w-100 text-center">
         {{ section.settings.big_text }}
        </div>
    </div>
    <!-- <div style="position: relative; left:78%">
        <img src="{{ section.settings.adorno | img_url: 'master' }}" alt="adorno">
    </div> -->
</div>
{% schema %}
    {
        "name": "newsletter",
        "class": "newsletter-class",
        "settings": [
            {
               "type": "text",
               "id": "first_frase",
               "label": "Frase",
              "default": "Put your frase"
            },
            {
               "type": "textarea",
               "id": "big_text",
               "label": "text",
              "default": "<p class='pb-15'>put another frase to your newsletter</p>"
            },
            {
               "type": "image_picker",
               "id": "adorno",
               "label": "image"
            }
        ],
       "presets": [
            {
                "category": "Newsletter",
                "name":"New newsletter"
            }
       ]
    }
{% endschema %}
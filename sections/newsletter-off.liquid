<div style="height: 33vw; max-height: 700px; background-color: #FBEFEE;" class="center-vertically; w-100">
    <div style="position: relative; z-index: 1;" class="w-100">
        <h2 style="text-transform: uppercase; font-size: 16px; font-weight: lighter;" class="pb-15 w-100 text-center">{{ section.settings.first_frase }}</h2>
        <div style="padding-bottom: 40px;" class="w-100 text-center">
         {{ section.settings.big_text }}
        </div>
        <div class="flex-center w-100">
            <input type="email">
            <a href="#"><i class="fa-solid fa-angle-right"></i></a>
        </div>
    </div>
    <!-- <div style="position: relative; left:78%">
        <img src="{{ section.settings.adorno | img_url: 'master' }}" alt="adorno">
    </div> -->
</div>
{% schema %}
    {
        "name": "newsletter",
        "class": "newsletter-class",
        "settings": [
            {
               "type": "text",
               "id": "first_frase",
               "label": "Frase",
              "default": "Put your frase"
            },
            {
               "type": "textarea",
               "id": "big_text",
               "label": "text",
              "default": "<p class='pb-15'>put another frase to your newsletter</p>"
            },
            {
               "type": "image_picker",
               "id": "adorno",
               "label": "image"
            }
        ],
       "presets": [
            {
                "category": "Newsletter",
                "name":"New newsletter"
            }
       ]
    }
{% endschema %}
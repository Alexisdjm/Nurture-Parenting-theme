<div class="margin-slider-logo-section">
    <h5 class="flex-center">Featured in</h5>
        <div class="carousel">
            <div class="slider">
                <div class="item-container">
                    <img src="{{ section.settings.logo_image1 | img_url: 'master' }}">
                </div>
                <div class="item-container">
                    <img src="{{ section.settings.logo_image2 | img_url: 'master' }}">
                </div>
                <div class="item-container">
                    <img src="{{ section.settings.logo_image3 | img_url: 'master' }}">
                </div>
                {% if section.settings.logo_image4 != blank %}
                    <div class="item-container">
                        <img src="{{ section.settings.logo_image4 | img_url: 'master' }}">
                    </div>
                {% endif %}
                {% if section.settings.logo_image5 != blank %}
                    <div class="item-container">
                        <img src="{{ section.settings.logo_image5 | img_url: 'master' }}">
                    </div>
                {% endif %}
                {% if section.settings.logo_image6 != blank %}
                    <div class="item-container">
                        <img src="{{ section.settings.logo_image6 | img_url: 'master' }}">
                    </div>
                {% endif %}
                {% if section.settings.logo_image7 != blank %}
                    <div class="item-container">
                        <img src="{{ section.settings.logo_image7 | img_url: 'master' }}">
                    </div>
                {% endif %}
                {% if section.settings.logo_image8 != blank %}
                    <div class="item-container">
                        <img src="{{ section.settings.logo_image8 | img_url: 'master' }}">
                    </div>
                {% endif %}
            </div>
            <div class="controls">
                <button class="next"><i class="fa-solid fa-chevron-right"></i></button>
                <button class="prev"><i class="fa-solid fa-chevron-left"></i></button>
            </div>
        </div>
    </div>
</div>


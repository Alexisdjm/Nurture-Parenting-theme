        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Slider",
        "class": "infinite-slider",
        "settings": [
            {
                "type": "text",
                "id": "item_title",
                "label": "item slider",
                "default": "este es un item"
            },
            {
               "type": "image_picker",
               "id": "logo_image",
               "label": "logo_featured"
            }
        ],
       "presets": [
            {
                "category": "Slider",
                "name":"Infinite Slider"
            }
       ]
    }
{% endschema %}
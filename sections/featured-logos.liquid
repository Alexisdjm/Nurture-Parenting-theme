<div class="container">
    <div class="h5">Circular carousel (infinite)</div>
        <div class="carousel">
            <div class="slider">
                <div class="item-container">
                    <img src="{{ section.settings.logo_image | img_url: 'master' }}" alt="">
                </div>
                <div class="item-container">
                    <img src="{{ section.settings.logo_image | img_url: 'master' }}" alt="">
                </div>
                <div class="item-container">
                    <img src="{{ section.settings.logo_image | img_url: 'master' }}" alt="">
                </div>
                <div class="item-container">
                    <img src="{{ section.settings.logo_image | img_url: 'master' }}" alt="">
                </div>
                <div class="item-container">
                    <img src="{{ section.settings.logo_image | img_url: 'master' }}" alt="">
                </div>
                <div class="item-container">
                    <img src="{{ section.settings.logo_image | img_url: 'master' }}" alt="">
                </div>
            </div>

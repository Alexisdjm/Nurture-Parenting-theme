<header>
    <p>
        <span class="arrow">&#139;</span>
        <span class="arrow">&#155;</span>
    </p>
</header>
<section>
    
    {% for product in collection.products %}
        <div class="product">
            <picture>
                <img src="{{ product.featured_image.src | img_url: 'master' }}" alt="ss">
            </picture>
            <div class="detail">
                <p>
                    <a href="{{ product.url }}">{{ product.title }}</a><br>
                    <samp>{{ product.price | money }}</samp>
                </p>
            </div>
        </div>
    {% endfor %}
        
</section>
{% schema %}
    {
        "name": "Program slider",
        "class": "Programs",
        "settings": [
            {
            "type": "collection",
            "id": "Programs_available",
            "label": "Programs"
            },
            {
            "type": "text",
            "id": "title",
            "label": "title"
            }
        ],
       "presets": [
            {
                "category": "collection",
                "name":"Specific collection"
            }
       ]
    }
{% endschema %}
<div style="width: fit-content; height:300px">
    <h3 style="margin: 60px 0;">Our Programs</h3>
    {% for product in collections[section.settings.Programs_available].products %}
        <div class="carousel">
            <div class="slider">
                <div style="width: 29%; height: 550px; margin:20px">
                    <div style="width: 300px; height: 300px; padding: 15px; text-align: center;">
                        <img src="{{ product.featured_media.preview_image | img_url }}" alt="{{ product.title }}">
                    </div>
                    <br>
                    <p>{{ product.title }}</p>
                    <br> 
                    <p>{{ product.price }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% schema %}
    {
        "name": "Program slider",
        "class": "Programs",
        "settings": [
            {
            "type": "collection",
            "id": "Programs_available",
            "label": "Programs"
            },
            {
            "type": "text",
            "id": "title",
            "label": "title"
            }
        ],
       "presets": [
            {
                "category": "collection",
                "name":"Specific collection"
            }
       ]
    }
{% endschema %}
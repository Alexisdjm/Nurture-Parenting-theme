<div class="margin-slider-logo-section">
    <h5 class="flex-center">Our Programs</h5>
        <div class="carousel" style="height: fit-content !important;">
            <div class="slider">
                <!-- {% for product in collections[section.settings.Programs_available].products %}
                {% endfor %} -->
                <div>
                    <div style="width: 300px; height:300px;">
                        <img style="max-width: 100%; height:auto" src="{{ section.settings.image | image_url }}">
                    </div>
                    <p style="text-align: center; margin-bottom: 10px;">first plan</p>
                    <p style="text-align:center"> 47$</p>
                </div>
            </div>
            <div class="controls">
                <button class="next"><i class="fa-solid fa-chevron-right"></i></button>
                <button class="prev"><i class="fa-solid fa-chevron-left"></i></button>
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Program slider",
        "class": "Programs",
        "settings": [
            {
            "type": "collection",
            "id": "Programs_available",
            "label": "Programs"
            },
            {
            "type": "text",
            "id": "title",
            "label": "title"
            },
            {
               "type": "image_picker",
               "id": "image",
               "label": "image"
            }
        ],
       "presets": [
            {
                "category": "collection",
                "name":"Specific collection"
            }
       ]
    }
{% endschema %}
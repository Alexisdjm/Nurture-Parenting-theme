<div style="height: fit-content; display: flex; justify-content: center;">
    <div style="display: flex; max-width: 1100px;">
        <div style="width: 50%;">
            <div style="height: 100%; padding: 0 15% 0 33%; display: flex; align-items: center;">
                <div style="height: fit-content; width: 100%; ">
                    <h4>{{ section.settings.title }}</h4>
                    {{ section.settings.article }}
                </div>
            </div>
        </div>
        <div style="width: 50%; display:flex; justify-content: center;">
            <img style="width: 75%;" src="{{ section.settings.big_image | img_url: 'master' }}">
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Big image with text",
        "class": "big-image-text",
        "settings": [
            {
               "type": "image_picker",
               "id": "big_image",
               "label": "image"
            },
            {
              "type": "image_picker",
              "id": "background",
              "label": "background"
            },
            {
                "type": "text",
                "id": "title",
                "label": "title",
                "default": "title of article"
            },
            {
                "type": "richtext",
                "id": "article",
                "label": "article",
                "default": "<p>content of your article</p>"
            }
        ],
       "presets": [
            {
                "category": "presentation",
                "name":"Bigger image with text"
            }
        ]
    }
{% endschema %}
<div style="width: 100%; height: 900px;">
    <div style="display: flex;">
        <div style="margin: 10px;">
            <img src="{{ sections.settings.big_image | image_url:'master' }}">
        </div>
        <div>
            <h4>{{ section.settings.title }}</h4>
            <p>{{ section.settings.article }}</p>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Big image with text",
        "class": "big-image-text",
        "settings": [
            {
               "type": "image_picker",
               "id": "big_image",
               "label": "image"
            },
            {
              "type": "image_picker",
              "id": "background",
              "label": "background"
            },
            {
                "type": "text",
                "id": "title",
                "default": "title of article"
            },
            {
               "type": "richtext",
               "id": "article",
              "default": "content of your article"
            }
        ],
       "presets": [
            {
                "category": "presentation",
                "name":"Bigger image with text"
            }
        ]
    }
{% endschema %}
<div class="w-100 section-margin">
    <div class="w-100; ebook-title-padding">
        <h2 style="font-size: 36px; color:#361E45; text-align: center;">{{ section.settings.blog_header }}</h2>
    </div>
    <p style="position: relative; z-index:999; top:150px">
        <span style="right:95%;" class="blog-arrow">&#139;</span>
        <span style="left:95%;" class="blog-arrow">&#155;</span>
    </p>
    <div style="margin-left: 60px;" class="w-100; flex-center">
        <section class="blog-section">
            {% for block in section.blocks %}
                {% if block.settings.width %}
                    <div style="min-width: fit-content; max-height: 378px;" class="blog">
                        <picture class="picture-padding blog-picture-wider">
                            <img src="{{ block.settings.blog_image | img_url: 'master' }}" alt="blog">
                        </picture>
                        <div class=" post-fit-image h-100">
                            <div style="max-width: 479px;" class="post-info picture-padding">
                                <p  class="blog-post-title">{{ block.settings.blog_content }}</p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div style="min-width: fit-content; max-height: 378px;" class="blog">
                        <picture class="picture-padding blog-picture-tiny">
                            <img src="{{ block.settings.blog_image | img_url: 'master' }}" alt="blog">
                        </picture>
                        <div class=" post-fit-image h-100">
                            <div style="max-width: 273px;" class="post-info picture-padding">
                                <p class="blog-post-title">{{ block.settings.blog_content }}</p>
                            </div>
                        </div>
                    </div>                            
                {% endif %}
            {% endfor %}
        </section>
    </div> 
</div>
{% schema %}
    {
        "name": "Blog Slider",
        "class": "Blog-slider",
        "settings": [
            {
                "type": "text",
                "id": "blog_header",
                "label":"blog header",
                "default": "title"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "big post",
                "settings": [
                    {
                       "type": "image_picker",
                       "id": "blog_image",
                       "label": "blog image"
                    },
                    {
                        "type": "text",
                        "id": "blog_content",
                        "label": "content",
                        "default": "something"
                    },
                    {
                        "type": "checkbox",
                        "id": "width",
                        "label": "wider blog item",
                        "default": false
                    }

                ]
            }
        ],
       "presets": [
            {
                "category": "blogs",
                "name":"blogs galery"
            }
       ]
    }
{% endschema %}